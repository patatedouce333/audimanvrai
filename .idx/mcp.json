{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "alwaysAllow": [
        "read",
        "write"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "alwaysAllow": []
    },
    "browser-automation": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {
        "DOCKER_MODE": "false"
      },
      "alwaysAllow": []
    },
    "web-fetch-fast": {
      "command": "npx",
      "args": [
        "-y",
        "@mcp-tools/fetch"
      ],
      "alwaysAllow": []
    },
    "git-local": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "alwaysAllow": []
    },
    "sqlite-db": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "./fireball_memory.db"
      ],
      "alwaysAllow": []
    },
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    }
  }
}